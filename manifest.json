{
  "manifest_version": 3,
  "name": "YouLyrics",
  "description": "Adds song lyrics under music videos in YouTube",
  "version": "0.1.0",

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["dist/assets/index.js"],
      "css": ["dist/assets/index.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
